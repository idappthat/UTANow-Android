<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".createevent.CreateEventActivity"
        tools:showIn="@layout/activity_create_event">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/attachButton"
            android:src="@drawable/ic_attachment_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Upload Image"
            android:id="@+id/imageNameText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:onClick="showTimePickerDialog" />
            <Button
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:onClick="showTimePickerDialog" />
        </LinearLayout>
        <EditText
            android:id="@+id/add_event_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Event Title"
            android:inputType="textCapSentences|textAutoCorrect"
            android:maxLength="40"
            android:lines="1" />
        <EditText
            android:id="@+id/add_event_organization"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Organization Name"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
            android:lines="1"/>
        <EditText
            android:id="@+id/add_event_description"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
            android:lines="10"
            android:maxLength="400"
            android:hint="Event Description"/>
    </LinearLayout>
</ScrollView>